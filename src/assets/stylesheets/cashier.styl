.user-panel
  background #9b9b9b
  padding 18px

.user-panel-pic
  width 50px
  height 50px
  background-color #332E29
  background-image url(../images/user-panel-nopic.png)
  background-position center center
  border 2px solid #211110
  box-shadow 0 0 0 2px rgba(0, 0, 0, 0.2)
  border-radius 50%
  margin-right 10px
  display inline-block
  vertical-align middle

.user-panel-name
  display inline-block
  vertical-align middle
  color: #222
  font-size: 1rem
  font-weight: 400


.user-nav
  border-bottom 46px solid #222
  background-color #0d0d0d

.user-nav-list
  list-style-type none
  margin 0
  padding 0
  font-size 0

.user-nav-item
  display inline-block
  &:first-child
    .user-nav-link
      padding-left 18px

.user-nav-link
  color #999
  font-size 0.75rem
  font-weight 400
  text-decoration none
  text-transform uppercase
  padding 14px 35px
  display block
  transition all 150ms ease

.user-nav-link-active,
.user-nav-link:hover
  color #ddd
  background-color #191919

.user-nav-link-bullet
  position relative
  &:after
    content ''
    width 8px
    height 8px
    background-color #1EBE83
    border-radius 50%
    position absolute
    right 22px
    top 14px


.cashier-panels
  padding 55px 40px
  display flex
  justify-content space-between

.cashier-panel
  background-color #EDF1F4
  border 1px solid #A4B2BB
  border-radius 4px
  float left

.cashier-panel__type-table
  width 51%
  box-sizing: content-box

.cashier-panel__type-info
  width 48%

.cashier-panel__type-info
  padding 40px 60px 14px

.cashier-text
  font-size 1rem
  font-weight 400
  line-height 1.5rem
  margin 0 0 24px

.cashier-last-time
  display block
  font-size: 1.3125rem
  margin 0 0 70px
  font-weight: 700


.cashier-table
  width 100%

.cashier-table-caption
  color #333
  font-size 1.375rem
  font-weight 400
  text-align left
  padding 24px 30px 16px

.cashier-table-th
  background-color #d7dee2
  text-transform uppercase
  font-size 0.75rem
  font-weight 700
  color #222
  padding 14px 30px 10px

.cashier-table-tr
  border-bottom 1px solid #bac8d2

.cashier-table-tr__grand-total-tr
  border-bottom none

.cashier-table-tr__play-money-add
  border-bottom none
  background-color #d7dee2

.cashier-table-tr__footer
  border-bottom none
  background-color #444444

.cashier-table-td
  color #333
  font-size 0.875rem
  font-weight 400
  padding 11px 30px

.cashier-table-td__align-right
  text-align right

.cashier-table-td__grand-total-td
  color #333
  font-size 1.375rem
  font-weight 400
  padding 28px 30px


.cashout-table
  width 100%

.cashout-table-caption
  color #222
  font-size 0.75rem
  font-weight 700
  text-transform uppercase
  text-align left
  padding-bottom 26px

.cashout-table-td
  padding-bottom 26px
  color #333
  font-size 0.875rem
  font-weight 400

.cashout-status
  font-size 0.75rem

.cashout-pending
  color #767D83

.cashout-complete
  color #1EBE83

.cashout-table-check-icon
  margin-left 22px
