.cashier-panel__type-user-form
  width 65%
  padding 26px

.user-form-header
  margin 0 0 40px
  padding 0
  color #333
  font-size 22px
  font-weight 400
  font-size 1.375rem

.user-form-row
  display flex
  justify-content space-between

.user-form-row__type-geo
  margin-top 24px

.user-form-row__type-bottom
  margin-top 12px
  .user-form-control-group
    margin-bottom 24px

.user-form-control-group
  margin-bottom 12px

.user-form-label
  display block
  color #333
  font-size 0.75rem
  font-weight 400
  text-transform uppercase
  margin-bottom 4px

.user-form-input
  width 162px
  height 30px
  border 1px solid #888
  border-radius 15px
  background transparent
  padding 0 15px
  font-size 0.875rem
  font-weight 400
  &:focus
    outline none
    background-color #F3F9F9
    border 1px solid #1EBE83
    box-shadow 0 0 3px rgba(0, 255, 161, 0.5), inset 0 0 0 1px rgba(255, 255, 255, 0.7)

.user-form-input__type-address
  width 282px

.user-form-notice
  color #666
  font-size 14px
  font-weight 400

.user-form-buttons
  width 221px
  text-align center
  .btn
    margin-bottom 10px
    min-width 0
    padding-left 20px
    padding-right 20px

.user-form-buttons-row
  display flex
  justify-content space-between

.cashier-panel__type-user-info
  width 33%
  text-align center
  padding 25px

  .btn
    margin-bottom 10px

.user-info-header
  margin 0 0 20px
  color #333
  font-size 1.375rem
  font-weight 400

.user-info-avatar
  width 132px
  height 132px
  display block
  margin 0 auto 24px
  border-radius: 50%
  background-color #96A1A8
  box-shadow inset 0 -10px 0 rgba(0, 0, 0, 0.05), inset 0 0 0 8px rgba(237, 241, 244, 0.05)
  background url("../images/user-avatar.png") center center no-repeat

.user-info-social
  margin-top 28px
  border-top 2px solid #9F9F9F
  display inline-block
  padding-top 26px
  min-width 200px

.user-info-social-header
  color #332E29
  font-size 0.875rem
  font-weight 400
  margin-bottom 12px
  display block

.user-info-social-list
  margin 0
  padding 0
  list-style-type none
  display flex
  justify-content: space-between

.user-info-social-item
  float left
  width 45px
  height 45px

.user-info-social-link
  display block
  width 100%
  height 100%
  background-repeat no-repeat
  background-position 0 0

.user-info-social-link__type-twi
  background-image url("../images/social-twi.png")

.user-info-social-link__type-vk
  background-image url("../images/social-vk.png")

.user-info-social-link__type-ok
  background-image url("../images/social-ok.png")

.user-info-social-link__type-fb
  background-image url("../images/social-fb.png")

