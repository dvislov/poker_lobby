*
  box-sizing border-box

.pull-left
  float left !important
.pull-right
  float right !important
.clearfix
  &:before,
  &:after
    content " "
    display table
  &:after
    clear: both


.header
  height 40px
  padding 0 9px
  background #0d0d0d
  color #bbbbbb
  font-size 12px

.header-logo
  position relative
  top 6px

.header-controls
  text-align right

.header-time
  display inline-block
  vertical-align middle
  padding 7px 17px 0 22px


.nav
  padding-top 5px
  font-size 0
  display inline-block
.nav-list
  margin 0
  padding 0
  list-style-type none
.nav-item
  display inline-block
  vertical-align middle
  font-size 14px
  margin 0 5px
.nav-link
  color #bbbbbb
  text-decoration none
  border: 2px solid #363636
  display inline-block
  height 30px
  vertical-align middle
  padding 6px 14px
  border-radius: 15px
  transition: all 150ms ease
  &:hover,
  &.nav-link__active
    background #209067
    border-color #209067
    color #000
.nav-digit
  color #fff
  display inline-block
  margin-left 5px

.nav__type-filter-left
  padding-top 0
  margin-left -5px
  .nav-link
    background-color #555555
    border-color #555555
    color #bbb
    &:hover,
    &.nav-link__active
      background-color #209067
      border-color #209067
      color #fff

.nav__type-filter-right
  padding-top 0
  margin-right -5px
  .nav-link
    background-color #2e5b4f
    border-color #2e5b4f
    color #bbb
    &:hover,
    &.nav-link__active
      background-color #222
      border-color #222
      color #fff


.filter
  background-color #9b9b9b
  padding 8px 9px


.lobby-list-header
  background-color #bfc8ce

.lobby-list-header-item
  padding 18px
  font-size 12px
  font-weight bold
  text-transform uppercase

.lobby-list-header-item-help
  display inline-block
  background #899ba9
  color #fff
  font-weight normal
  font-size 10px
  width 12px
  height 12px
  border-radius: 50%
  text-align center
  vertical-align middle
  line-height 12px
  margin-left 7px
  position relative
  top -2px
  padding-top 1px

.lobby-item-content
  font-size 14px

.lobby-item-content__filled
  color #b1bfc9
.lobby-item-content__almost-fill
  color #f00
.lobby-item-yours
  color #1d37f7

.lobby-list-button
  display inline-block
  font-size 12px
  text-decoration none
  color #333
  width 70px
  text-align center
  border: 1px solid #666
  margin 0 5px
  height 26px
  border-radius 13px
  line-height 26px
.lobby-list-button__type-sucess
  color #fff
  background-color #20966c
  border-color #20966c
.lobby-list-button__type-disabled
  color #767d83
  border-color transparent
.lobby-list-button__type-primary
  background-color #0076a3
  border-color #0076a3
  color #fff

.lobby-list__display-table
  display table
  width 100%
  .lobby-list-header
    display table-row
  .lobby-list-header-item
    display table-cell
  .lobby-item
    display table-row
  .lobby-item-content
    display table-cell
    padding 12px 18px
    border-top 1px solid #bac8d2
  .lobby-item__type-active
    .lobby-item-content
      border-top 2px solid #0076a3
      border-bottom 2px solid #0076a3
      &:first-child
        border-left 8px solid #0076a3
        padding-left 10px
      &:last-child
        border-right 2px solid #0076a3
        padding-right 16px
      .lobby-list-button
        &:first-child
          visibility hidden
    & + .lobby-item
      .lobby-item-content
        border: none
